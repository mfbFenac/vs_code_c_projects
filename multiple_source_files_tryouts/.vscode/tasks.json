{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "MFB COMPILER",
			"type": "cppbuild",
			"command": "gcc",
            "args": [
                "-c",
                "${workspaceFolder}\\*.c",
                "&&",
				"gcc",
				"-o",
				"program",
				"${workspaceFolder}\\*.o"
            ],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\MinGW\\bin\\gcc.exe"
		}
	]
}

// "${workspaceFolder}/*.cpp"